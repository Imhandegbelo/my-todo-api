{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "A todo app able to save todos in the backend using MongoDB",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "client": "npm start --prefix client",
    "build": "cd client/ && npm install && npm run build",
    "con": "concurrently \"npm run dev\" \"npm run client\""
  },
  "keywords": ["nodejs", "todo"],
  "author": "George",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "mongoose": "^6.7.2",
    "nodemon": "^2.0.20"
  },
  "devDependencies": {
    "concurrently": "^7.5.0"
  }
}
